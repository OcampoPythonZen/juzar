# ===================================
# Environment Configuration Example
# ===================================
# Copy this file to .env and update the values
# Never commit sensitive data to version control

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=development
VITE_APP_NAME="JUZAR Theme"
VITE_APP_DESCRIPTION="Modern WordPress Theme"
VITE_APP_URL=http://localhost
VITE_APP_VERSION=1.0.0

# ===== WORDPRESS CONFIGURATION =====
# WordPress Site URL (no trailing slash)
VITE_WORDPRESS_URL=http://localhost
VITE_WORDPRESS_REST_API_PREFIX=wp-json
VITE_WORDPRESS_ADMIN_AJAX=wp-admin/admin-ajax.php

# ===== BUILD CONFIGURATION =====
# Development server settings
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_PORT=3000
VITE_DEV_SERVER_HTTPS=false
VITE_DEV_SERVER_OPEN=true
VITE_DEV_SERVER_PROXY_TARGET=http://localhost
VITE_DEV_SOURCE_MAP=true

# Build output
VITE_BUILD_OUT_DIR=dist
VITE_BUILD_ASSETS_DIR=assets
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true
VITE_BUILD_REPORT=true
VITE_BUILD_ANALYZE=false
VITE_BUILD_CHUNK_SIZE_WARNING=1000

# ===== PERFORMANCE OPTIMIZATIONS =====
# Image optimization
VITE_IMAGE_QUALITY=80
VITE_IMAGE_FORMAT=webp
VITE_IMAGE_AVIF_QUALITY=70
VITE_IMAGE_WEBP_QUALITY=80
VITE_IMAGE_JPEG_QUALITY=80
VITE_IMAGE_PNG_QUALITY=80

# Resource loading
VITE_ENABLE_PRELOADING=true
VITE_ENABLE_PREFETCHING=true
VITE_ENABLE_PRELOAD_FONTS=true
VITE_ENABLE_PRELOAD_CRITICAL=true

# ===== PWA CONFIGURATION =====
VITE_PWA_ENABLED=true
VITE_PWA_REGISTER_TYPE=autoUpdate
VITE_PWA_SCOPE=/
VITE_PWA_STRATEGY=generateSW
VITE_PWA_MANIFEST_NAME="JUZAR Theme"
VITE_PWA_MANIFEST_SHORT_NAME="JUZAR"
VITE_PWA_MANIFEST_THEME_COLOR="#ffffff"
VITE_PWA_MANIFEST_BACKGROUND_COLOR="#ffffff"
VITE_PWA_MANIFEST_DISPLAY="standalone"

# ===== ANALYTICS & TRACKING =====
# Google Analytics 4
# VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
# VITE_GTM_ID=GTM-XXXXXX

# Hotjar
# VITE_HOTJAR_ID=1234567
# VITE_HOTJAR_SV=6

# Sentry
# VITE_SENTRY_DSN=your-sentry-dsn
# VITE_SENTRY_ENVIRONMENT=development

# ===== API CONFIGURATION =====
VITE_API_BASE_URL=/wp-json
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_CACHE_TTL=300000

# ===== FEATURE FLAGS =====
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_DEBUG=false
VITE_FEATURE_OFFLINE=false
VITE_FEATURE_NOTIFICATIONS=false
VITE_FEATURE_DARK_MODE=true

# ===== AUTHENTICATION =====
VITE_AUTH_ENABLED=true
VITE_AUTH_COOKIE_NAME=juzar_auth
VITE_AUTH_TOKEN_REFRESH_INTERVAL=540000 # 9 minutes

# ===== PERFORMANCE BUDGET =====
VITE_PERF_BUDGET_JS=250
VITE_PERF_BUDGET_CSS=50
VITE_PERF_BUDGET_IMAGE=100
VITE_PERF_BUDGET_FONT=100

# ===== SECURITY =====
VITE_CSP_ENABLED=true
VITE_CSP_REPORT_ONLY=false
VITE_CSP_REPORT_URI=

# ===== TESTING =====
VITE_TEST_MODE=false
VITE_E2E_BASE_URL=http://localhost:3000

# ===== DEBUGGING =====
# Set to true to enable debug logging
VITE_DEBUG=false
VITE_LOG_LEVEL=info # error, warn, info, debug, trace
VITE_LOG_SCOPE=app # comma-separated list of scopes (app,api,store,etc.)

# ===== THIRD-PARTY INTEGRATIONS =====
# Mapbox
# VITE_MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Stripe
# VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key

# Firebase
# VITE_FIREBASE_API_KEY=your-api-key
# VITE_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
# VITE_FIREBASE_PROJECT_ID=your-project-id
# VITE_FIREBASE_STORAGE_BUCKET=your-bucket.appspot.com
# VITE_FIREBASE_MESSAGING_SENDER_ID=1234567890
# VITE_FIREBASE_APP_ID=1:1234567890:web:abcdef123456

# ===== ADVANCED =====
# These settings should rarely need to be changed
VITE_NODE_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:; media-src 'self'; object-src 'none';"
VITE_BUILD_OUT_DIR=dist
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_MINIFY=true

# Cache Busting
VITE_BUILD_HASH=true

# CSS Configuration
VITE_CSS_SOURCEMAP=true
VITE_CSS_MINIFY=true

# JavaScript Configuration
VITE_JS_SOURCEMAP=true
VITE_JS_MINIFY=true

# Legacy Browser Support
VITE_LEGACY_BROWSERS="defaults, not IE 11"
